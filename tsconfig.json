{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "allowJs": true,
        "outDir": "dist",
        "moduleResolution": "node",
        "baseUrl": "src",
        "rootDir": "src",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "removeComments": false
    },
    "exclude": [
        "./node_modules",
        "./docs",
        "./dist"
    ],
}
